@model SistemaConsultas.Models.Usuario
<div class="container">
    <form asp-controller="Usuario" asp-action="salvarUsuario" class="formLogin">
        
            <input asp-for="nome" type="text" placeholder="NOME" class="inputCadastroUsuario"/>
            <input asp-for="dataNascimento" type="text" placeholder="DATA NASC." class="inputCadastroUsuario"/>
            <input asp-for="login" type="text" placeholder="USUÁRIO" class="inputCadastroUsuario"/>
            <input asp-for="senha" type="password" placeholder="SENHA" class="inputCadastroUsuario"/>
            <input type="password" placeholder="CONFIRMA SENHA" class="inputCadastroUsuario"/>
            <input type="button" value="ENTRAR" class="inputCadastroUsuario btn"/>
        
    </form>
</div>

