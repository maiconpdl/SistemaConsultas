<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Projeto</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/cadastro.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/cadastroUsuario.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/Projeto.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <header>
            <div class="btnMenu"><span class="material-symbols-outlined">menu</span></div>
            <nav class="menu">
                <div class="logo">menu</div>
                <ul>

                    <li><a href="#">INICIO</a></li>
                    <li><a href="#" class="agendamento">AGENDAMENTO</a>
                        <ul class="itensAgendamento">
                            <li><a href="#">AGENDAR</a></li>
                            <li><a href="#">LISTAR AGENDA</a></li>
                        </ul>
                    </li>
                    <li><a href="#" class="cadastro">CADASTRO</a>
                        <ul class="itensCadastro">
                            <li><a href="#">PACIENTE</a></li>
                            <li><a href="#">PROFISSIONAL</a></li>
                        </ul>
                    </li>
                    <li><a href="#" class="relatorios">RELATÓTIOS</a>
                        <ul class="itensRelatorios">
                            <li><a href="#">CONSULTAS</a></li>
                            <li><a href="#">PRONTUÁRIO</a></li>
                        </ul>
                    </li>
                    <li><a href="#">SISTEMA</a>
                        <ul class="itensSistema">
                            <li><a href="#" class="sistema">USUÁRIO DO SISTEMA</a></li>
                        </ul>
                    </li>
                    <li><a href="#">SAIR</a></li>
                </ul>
            </nav>

        </header>
        <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    </body>
</html>