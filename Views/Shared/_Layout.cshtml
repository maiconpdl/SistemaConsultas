<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Projeto</title>
        <link rel="stylesheet" href="https://bootswatch.com/5/yeti/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/fontawesome/css/all.css"/>
        <link rel="stylesheet" href="~/css/cadastro.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/cadastroUsuario.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/Projeto.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    </head>
    <body>
        <header>
            <div class="btnMenu"><span class="material-symbols-outlined">menu</span></div>
            <nav class="menu">
                <div class="btnFechar"><span class="material-symbols-outlined">close</span></div>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">INICIO</a></li>
                    <li><a href="#" class="agendamento">AGENDAMENTO</a>
                        <ul class="itensAgendamento">
                            <li><a asp-controller="Agenda" asp-action="Agenda">AGENDAR</a></li>
                            <li><a asp-controller="Agenda" asp-action="Atendimento">LISTAR AGENDA</a></li>
                        </ul>
                    </li>
                    <li><a href="#" class="cadastro">CADASTRO</a>
                        <ul class="itensCadastro">
                            <li><a asp-area="" asp-controller="Cadastros" asp-action="Pacientes">PACIENTE</a></li>
                            <li><a asp-area="" asp-controller="Cadastros" asp-action="Profissionais">PROFISSIONAL</a></li>
                            <li><a asp-area="" asp-controller="Cadastros" asp-action="Especialidades">ESPECIALIDADE</a></li>
                        </ul>
                    </li>
                    <li><a href="#" class="relatorios">RELATÓTIOS</a>
                        <ul class="itensRelatorios">
                            <li><a href="#">CONSULTAS</a></li>
                            <li><a href="#">PRONTUÁRIO</a></li>
                        </ul>
                    </li>
                    <li><a href="#" class="sistema">SISTEMA</a>
                        <ul class="itensSistema">
                            <li><a asp-area="" asp-controller="Usuario" asp-action="Usuarios" class="sistema">USUÁRIO DO SISTEMA</a></li>
                        </ul>
                    </li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Login">SAIR</a></li>
                </ul>
            </nav>

        </header>
        <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>    <script src="~/js/site.js" asp-append-version="true"></script>
    </body>
</html>