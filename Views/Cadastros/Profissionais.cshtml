@model IEnumerable<SistemaConsultas.Models.Profissional>
<div class="container p-5">
    <div class="formularios">
        <div class="cabeçalho">
            <h2>Profissionais</h2>
        </div>
        <center>
        <form asp-controller="Cadastros" asp-action="Profissionais" class="busca">
            <input type="text" name="profissional" value="" class="inputCadastro form-control form-control-sm">
            </br>
            <button type="submit" class="btn btn-sm btn-success">
                Buscar <i class="fa fa-light fa-magnifying-glass"></i>
            </button>
            <button type="submit" class="btn btn-sm btn-secondary">
                Limpar
            </button>
        </form>
        </center>
    </div>
    <div class="border border-light rounded p-5 formularios">
        <table class="table table-striped table-hover table-sm">
            <thead>
                <tr class="thead-light">
                    <th>
                        Nome
                    </th>
                    <th>
                        Data Nasc.
                    </th>
                    <th>
                        CBO
                    </th>
                    <th>
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody>
                <a asp-area="" asp-controller="Cadastros" asp-action="atualizarProfissional" class="btn-sm btn-outline-primary rounded-circle">
                                    <i class=" fa fa-pencil-square-o"></i>
                </a>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dataNascimento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.especialidade)
                        </td>
                        <td>
                            <div class="row">
                               
                                <form asp-controller="Cadastros" asp-action="editarProfisisonal">
                                    <button type="submit" class="btn btn-sm btn-outline-primary rounded-circle">
                                        <i class="fa fa-duotone fa-pencil"></i>

                                    </button>
                                </form>
                                
                                <form asp-controller="Cadastros" asp-action="excluirProfissional" asp-route-id="@item.id" name="id">
                                    <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle">
                                        <i class="fa fa-duotone fa-trash"></i>

                                    </button>
                                </form>
                                
                                

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-area="" asp-controller="Cadastros" asp-action="cadastroProfissional" class="btn btn-sm btn-outline-info">
            Novo
        </a>
    </div>
</div>