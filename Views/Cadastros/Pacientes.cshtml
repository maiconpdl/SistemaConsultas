@model IEnumerable<SistemaConsultas.Models.Paciente>
<div class="container p-5">
    <div class="border border-light rounded p-5">
        <table class="table table-striped table-hover table-sm">
            <thead>
                <tr class="thead-light">
                    <th>
                        Nome
                    </th>
                    <th>
                        Data Nasc.
                    </th>
                    <th>
                        Telefone
                    </th>
                    <th>
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody>
                <a asp-area="" asp-controller="Cadastros" asp-action="atualizarPaciente" class="btn-sm btn-outline-primary rounded-circle">
                                    <i class=" fa fa-pencil-square-o"></i>
                </a>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dataNascimento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.telefone)
                        </td>
                        <td>
                            <div class="row">
                               
                                <form asp-controller="Cadastros" asp-action="editarPaciente">
                                    <button type="submit" class="btn btn-sm btn-outline-primary rounded-circle">
                                        <i class="fa fa-duotone fa-pencil"></i>

                                    </button>
                                </form>
                                
                                <form asp-controller="Cadastros" asp-action="excluirpaciente">
                                    <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle">
                                        <i class="fa fa-duotone fa-trash"></i>

                                    </button>
                                </form>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-area="" asp-controller="Cadastros" asp-action="cadastroPaciente" class="btn btn-sm btn-outline-info">
            Novo
        </a>
    </div>
</div>